<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e7e7e7"
    >
   
   <!-- Header -->
   <include android:id="@+id/header" layout="@layout/header" />
   
   <RelativeLayout android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        >
        
        <!-- 提示框 -->
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
         />                   
            
         <!-- 字数统计 -->
         <TextView
            android:id="@+id/chars_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:text="@string/words"
            /> 
        <TextView
            android:id="@+id/chars_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/chars_word"
            android:textSize="13px"
            android:textColor="#FF000000"
            android:layout_marginRight="3px"
            android:text="140"
            />
        <TextView
            android:id="@+id/char_you_can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/chars_text"
            android:text="@string/you_can_type"
            /> 
        
        </RelativeLayout>
        
    <!-- 图片预览 -->     
    <ImageView
            android:id="@+id/preview"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_marginRight="10px"
            android:gravity="center_vertical"
            android:visibility="invisible"
        />     

    <!-- main text input -->
    <EditText android:id="@+id/tweet_edit"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"
          android:textSize="15px"
          android:imeOptions="actionSend|flagNoEnterAction"    
          android:gravity="top"
          />   
           
   <!-- 工具栏 -->
   <RelativeLayout android:gravity="center_vertical"
         android:layout_width="fill_parent"
         android:layout_height="50dp"
          >
                 
       <!-- 发送按钮 -->
	   <Button android:id="@+id/send_button"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignParentLeft="true"
	          android:layout_marginLeft="3px"
	          android:text="@string/send"
	          />
	   <!-- 选择图片 -->
	   <Button android:id="@+id/choose_images_button"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/send_button"
              android:layout_marginLeft="3px"
              android:text="@string/choose_images"
              />
       <!-- 后台发送 -->
 	   <Button android:id="@+id/send_in_backgroud_button"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignParentRight="true"
	          android:layout_marginRight="3px"
	          android:text="@string/send_in_background"
	          android:visibility="invisible"
	          />
	    
	    
    </RelativeLayout>
    
    

</LinearLayout>
