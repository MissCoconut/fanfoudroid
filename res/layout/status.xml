<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@color/body_background"
  >
  
   <!-- Header -->
   
   <ScrollView 
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:layout_weight="1">
   <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
       <!-- 个人栏 -->
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:padding="10dp"
            >
            <ImageView android:id="@+id/profile_image"
                android:src="@drawable/user_default_photo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp" />
            <!-- 用户名 -->
            <TextView android:id="@+id/tweet_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_image"
                style="@style/LinkText.Bold.Huge"
                 />
            <!-- 用户所在地 -->
            <TextView android:id="@+id/tweet_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tweet_user_text"
                android:layout_alignLeft="@id/tweet_user_text"
                style="@style/normalText.span"
                 />
            <ImageButton android:id="@+id/person_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/arrow_1" 
                android:background="@null"/>
        </RelativeLayout>
        <!-- 分割线 -->
        <LinearLayout
           android:background="#CCC"
           android:layout_width="fill_parent"
           android:layout_height="1dp"
           />
        <!-- 消息主体 -->
        <TextView android:id="@+id/status_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/normalText.Big"
            />
        <!-- 消息图片 -->
        <ImageView android:id="@+id/status_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/twitter_follow_me"
            />
        <!-- 信息属性 -->
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            >
            <TextView android:id="@+id/status_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                style="@style/normalText.span"
                android:text="来自: 网页版"/>
            <TextView android:id="@+id/status_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="@style/normalText.span"
                android:text="10-10 10:10"/>
         </RelativeLayout>
         <!-- 回复原文 -->
         <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/dialog_box_2"
            android:layout_margin="10dp"
            >
            <TextView android:id="@+id/reply_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                style="@style/normalText"
                android:text="饭友经典语录: 追求艺术品有无数的动机。但是，“炫耀”却是最最重要并且最最不能缺少的动机之一。——@羊小倭"/>
            <TextView android:id="@+id/reply_status_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reply_status_text"
                android:layout_alignParentRight="true"
                style="@style/normalText.span"
                android:layout_marginTop="5dp"
                android:text="10-10 10:10"/>
         </RelativeLayout>
         
     </LinearLayout>
   </ScrollView>
   
   <!-- footer -->
   <include android:id="@+id/footer" layout="@layout/footer" />
    
</LinearLayout>
